Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"

  # Provisioning
  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    apt-get install -y golang-go sqlite3
    # Any other dependencies you might need
  SHELL

  # Port Forwarding
  config.vm.network "forwarded_port", guest: 15000, host: 8080

  # Shared Folder
  config.vm.synced_folder ".", "/vagrant"

  # Optional: Adjust VM resources
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = 2
  end
end
